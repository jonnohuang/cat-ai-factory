# Dockerfile.planner
FROM python:3.11-slim

WORKDIR /app

# Copy requirements and install
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy the repo code
COPY repo ./repo

ENV PYTHONPATH=/app
ENV PYTHONUNBUFFERED=1

# Expose port for FastAPI
EXPOSE 8080

# Default command to start the ingress service
CMD ["uvicorn", "repo.services.ingress.main:app", "--host", "0.0.0.0", "--port", "8080"]
