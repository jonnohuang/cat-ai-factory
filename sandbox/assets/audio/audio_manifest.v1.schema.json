{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://cat-ai-factory.repo/sandbox/assets/audio/audio_manifest.v1.schema.json",
    "title": "Cat AI Factory Audio Manifest v1",
    "type": "object",
    "required": [
        "project",
        "schema",
        "version",
        "beds"
    ],
    "additionalProperties": false,
    "properties": {
        "project": {
            "const": "Cat AI Factory"
        },
        "schema": {
            "const": "audio_manifest.v1"
        },
        "version": {
            "type": "string",
            "minLength": 1
        },
        "generated_at": {
            "type": "string",
            "format": "date-time"
        },
        "beds": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "id",
                    "relpath",
                    "format",
                    "sample_rate_hz",
                    "channels",
                    "loopable",
                    "license"
                ],
                "additionalProperties": false,
                "properties": {
                    "id": {
                        "type": "string",
                        "pattern": "^[a-z0-9]+(-[a-z0-9]+)*$",
                        "description": "Unique kebab-case identifier for this audio bed"
                    },
                    "relpath": {
                        "type": "string",
                        "minLength": 1,
                        "description": "Path relative to sandbox root (e.g. assets/audio/beds/funny-track.wav)"
                    },
                    "format": {
                        "type": "string",
                        "minLength": 1,
                        "description": "File extension/format (e.g. wav, mp3)"
                    },
                    "sample_rate_hz": {
                        "type": "integer",
                        "minimum": 1
                    },
                    "channels": {
                        "type": "integer",
                        "minimum": 1
                    },
                    "loopable": {
                        "type": "boolean"
                    },
                    "mood_tags": {
                        "type": "array",
                        "minItems": 1,
                        "items": {
                            "type": "string",
                            "pattern": "^[a-z0-9]+(-[a-z0-9]+)*$"
                        },
                        "uniqueItems": true
                    },
                    "license": {
                        "type": "object",
                        "required": [
                            "type",
                            "safe_to_commit"
                        ],
                        "additionalProperties": false,
                        "properties": {
                            "type": {
                                "type": "string",
                                "enum": [
                                    "cc0",
                                    "public-domain",
                                    "self-created",
                                    "explicit-permission",
                                    "placeholder"
                                ]
                            },
                            "safe_to_commit": {
                                "type": "boolean",
                                "description": "True if the asset is license-safe to be committed to the public repo"
                            },
                            "source": {
                                "type": "string",
                                "description": "Origin URL or source of the audio"
                            },
                            "notes": {
                                "type": "string",
                                "description": "Usage restrictions or attribution requirements"
                            }
                        }
                    }
                }
            }
        }
    }
}