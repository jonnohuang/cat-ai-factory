{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/jonnohuang/cat-ai-factory/repo/shared/qc_policy.v1.schema.json",
  "title": "QC Policy v1",
  "description": "Deterministic quality policy authority used by controller routing.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "version",
    "policy_id",
    "max_retries_default",
    "gates",
    "routing"
  ],
  "properties": {
    "version": {
      "const": "qc_policy.v1"
    },
    "policy_id": {
      "type": "string",
      "minLength": 1
    },
    "generated_at": {
      "type": "string",
      "format": "date-time"
    },
    "max_retries_default": {
      "type": "integer",
      "minimum": 0,
      "maximum": 10
    },
    "default_action_on_missing_report": {
      "type": "string",
      "enum": [
        "proceed_finalize",
        "retry_motion",
        "retry_recast",
        "block_for_costume",
        "escalate_hitl"
      ]
    },
    "gates": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "gate_id",
          "metric",
          "dimension",
          "threshold",
          "failure_action"
        ],
        "properties": {
          "gate_id": {
            "type": "string",
            "pattern": "^[a-z0-9_]+$"
          },
          "metric": {
            "type": "string"
          },
          "dimension": {
            "type": "string",
            "enum": [
              "identity",
              "motion",
              "audio",
              "costume",
              "technical"
            ]
          },
          "threshold": {
            "type": "number",
            "minimum": 0,
            "maximum": 1
          },
          "failure_action": {
            "type": "string",
            "enum": [
              "retry_motion",
              "retry_recast",
              "block_for_costume",
              "escalate_hitl"
            ]
          }
        }
      }
    },
    "routing": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "failure_action_priority",
        "fallback_action"
      ],
      "properties": {
        "failure_action_priority": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "enum": [
              "retry_motion",
              "retry_recast",
              "block_for_costume",
              "escalate_hitl"
            ]
          }
        },
        "fallback_action": {
          "type": "string",
          "enum": [
            "retry_motion",
            "retry_recast",
            "block_for_costume",
            "escalate_hitl"
          ]
        }
      }
    },
    "advisory_mode": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "enabled",
        "allowed_actions"
      ],
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "allowed_actions": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "retry_motion",
              "retry_recast",
              "block_for_costume",
              "escalate_hitl"
            ]
          }
        }
      }
    },
    "authority_trial": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "enabled",
        "allowed_actions",
        "rollback_action"
      ],
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "allowed_actions": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "retry_motion",
              "retry_recast",
              "block_for_costume",
              "escalate_hitl"
            ]
          }
        },
        "rollback_action": {
          "type": "string",
          "enum": [
            "retry_motion",
            "retry_recast",
            "block_for_costume",
            "escalate_hitl"
          ]
        }
      }
    }
  }
}
