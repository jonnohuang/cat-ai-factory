{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/jonnohuang/cat-ai-factory/repo/shared/episode_plan.v1.schema.json",
  "title": "Episode Plan v1",
  "description": "Planner-only intermediate artifact; schema-validated before job.json.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "version",
    "plan_id",
    "created_at",
    "date",
    "lanes",
    "beats",
    "languages_enabled"
  ],
  "properties": {
    "version": {
      "const": "episode_plan.v1",
      "description": "Schema version identifier."
    },
    "plan_id": {
      "type": "string",
      "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$",
      "description": "Unique plan identifier (kebab-case)."
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO-8601 timestamp when the plan was created."
    },
    "source": {
      "type": "string",
      "description": "Origin of the plan (e.g., 'planner', 'clawdbot')."
    },
    "date": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
      "description": "Target production date (YYYY-MM-DD)."
    },
    "lanes": {
      "type": "object",
      "additionalProperties": false,
      "description": "Target volume per lane (A/B/C).",
      "properties": {
        "a": {
          "type": "integer",
          "minimum": 0,
          "maximum": 10
        },
        "b": {
          "type": "integer",
          "minimum": 0,
          "maximum": 10
        },
        "c": {
          "type": "integer",
          "minimum": 0,
          "maximum": 10
        }
      }
    },
    "theme": {
      "type": "string",
      "maxLength": 200,
      "description": "Daily theme or topic."
    },
    "heroes": {
      "type": "array",
      "description": "Selected hero ids from the hero registry.",
      "items": {
        "type": "string",
        "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
      },
      "uniqueItems": true
    },
    "beats": {
      "type": "array",
      "minItems": 1,
      "description": "Ordered beat outline (setup → gag → payoff).",
      "items": {
        "$ref": "#/definitions/beat"
      }
    },
    "captions_intent": {
      "type": "object",
      "description": "Caption intent as language maps.",
      "additionalProperties": false,
      "properties": {
        "en": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "zh-Hans": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        }
      }
    },
    "render_intent": {
      "type": "object",
      "additionalProperties": false,
      "description": "Planner intent for render parameters.",
      "properties": {
        "duration_seconds": {
          "type": "integer",
          "minimum": 10,
          "maximum": 60
        },
        "aspect_ratio": {
          "type": "string",
          "enum": [
            "9:16"
          ]
        },
        "fps": {
          "type": "integer",
          "minimum": 24,
          "maximum": 60
        },
        "resolution": {
          "type": "string",
          "enum": [
            "1080x1920"
          ]
        }
      }
    },
    "languages_enabled": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[a-z]{2,3}(-[A-Z][a-z]{3})?(-[A-Z]{2})?$"
      },
      "minItems": 1,
      "maxItems": 5,
      "uniqueItems": true,
      "description": "Languages required for this plan."
    },
    "creativity": {
      "type": "object",
      "additionalProperties": false,
      "description": "Planner creativity hints.",
      "properties": {
        "mode": {
          "type": "string",
          "enum": [
            "canon",
            "balanced",
            "experimental"
          ]
        },
        "canon_fidelity": {
          "type": "string",
          "enum": [
            "high",
            "medium"
          ]
        }
      }
    },
    "notes": {
      "type": "string",
      "maxLength": 2000,
      "description": "Additional planning notes."
    }
  },
  "definitions": {
    "language_map": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "en",
        "zh-Hans"
      ],
      "properties": {
        "en": {
          "type": "string",
          "minLength": 1
        },
        "zh-Hans": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "beat": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "beat_id",
        "summary"
      ],
      "properties": {
        "beat_id": {
          "type": "string",
          "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
        },
        "summary": {
          "$ref": "#/definitions/language_map"
        }
      }
    }
  }
}
