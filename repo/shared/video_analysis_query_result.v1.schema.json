{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/jonnohuang/cat-ai-factory/repo/shared/video_analysis_query_result.v1.schema.json",
  "title": "Video Analysis Query Result v1",
  "description": "Planner-only deterministic retrieval result over video analysis metadata canon.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "version",
    "query_id",
    "generated_at",
    "selected"
  ],
  "properties": {
    "version": {
      "const": "video_analysis_query_result.v1"
    },
    "query_id": {
      "type": "string",
      "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
    },
    "generated_at": {
      "type": "string",
      "format": "date-time"
    },
    "selected": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/selection"
      }
    }
  },
  "definitions": {
    "selection": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "analysis_id",
        "relpath",
        "priority",
        "matched_tags"
      ],
      "properties": {
        "analysis_id": {
          "type": "string",
          "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
        },
        "relpath": {
          "type": "string",
          "pattern": "^repo/canon/demo_analyses/[a-z0-9._-]+\\.json$"
        },
        "priority": {
          "type": "integer",
          "minimum": 0,
          "maximum": 100
        },
        "quality_score": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "matched_tags": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "type": "string",
            "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
          }
        },
        "selection_reason": {
          "type": "string",
          "maxLength": 240
        }
      }
    }
  }
}
