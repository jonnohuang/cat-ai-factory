{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/jonnohuang/cat-ai-factory/repo/shared/promotion_registry.v1.schema.json",
  "title": "Promotion Registry v1",
  "description": "Deterministic registry of approved lab promotions available to production pointer resolver.",
  "type": "object",
  "additionalProperties": false,
  "required": ["version", "updated_at", "approved"],
  "properties": {
    "version": {"const": "promotion_registry.v1"},
    "updated_at": {"type": "string", "format": "date-time"},
    "approved": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["candidate_id", "candidate_relpath", "applied_at", "proposal"],
        "properties": {
          "candidate_id": {"type": "string", "minLength": 1},
          "candidate_relpath": {"type": "string", "pattern": "^sandbox/logs/.+\\.json$"},
          "applied_at": {"type": "string", "format": "date-time"},
          "proposal": {"type": "object"}
        }
      }
    }
  }
}
