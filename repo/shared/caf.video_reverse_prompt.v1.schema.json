{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/jonnohuang/cat-ai-factory/repo/shared/caf.video_reverse_prompt.v1.schema.json",
  "title": "CAF Video Reverse Prompt v1",
  "description": "Planner-facing reverse analysis contract that separates deterministic truth from optional suggestions.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "version",
    "analysis_id",
    "source_video_relpath",
    "truth",
    "prompt_packages",
    "confidence"
  ],
  "properties": {
    "version": {
      "const": "caf.video_reverse_prompt.v1"
    },
    "analysis_id": {
      "type": "string",
      "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
    },
    "source_video_relpath": {
      "type": "string",
      "pattern": "^sandbox/.+\\.(mp4|mov|mkv|webm)$"
    },
    "truth": {
      "$ref": "#/definitions/truth"
    },
    "suggestions": {
      "$ref": "#/definitions/suggestions"
    },
    "prompt_packages": {
      "$ref": "#/definitions/prompt_packages"
    },
    "continuity_hooks": {
      "$ref": "#/definitions/continuity_hooks"
    },
    "confidence": {
      "$ref": "#/definitions/confidence"
    }
  },
  "definitions": {
    "truth": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "beat_grid_ref",
        "pose_checkpoints_ref",
        "keyframe_checkpoints_ref",
        "visual_facts",
        "shots"
      ],
      "properties": {
        "beat_grid_ref": {
          "type": "string",
          "pattern": "^repo/(canon|examples)/[a-zA-Z0-9._/-]+\\.json$"
        },
        "pose_checkpoints_ref": {
          "type": "string",
          "pattern": "^repo/(canon|examples)/[a-zA-Z0-9._/-]+\\.json$"
        },
        "keyframe_checkpoints_ref": {
          "type": "string",
          "pattern": "^repo/(canon|examples)/[a-zA-Z0-9._/-]+\\.json$"
        },
        "visual_facts": {
          "$ref": "#/definitions/visual_facts"
        },
        "shots": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/shot_truth"
          }
        }
      }
    },
    "shot_truth": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "shot_id",
        "start_sec",
        "end_sec",
        "camera"
      ],
      "properties": {
        "shot_id": {
          "type": "string",
          "pattern": "^shot_[0-9]{3}$"
        },
        "start_sec": {
          "type": "number",
          "minimum": 0
        },
        "end_sec": {
          "type": "number",
          "minimum": 0
        },
        "camera": {
          "type": "string",
          "enum": [
            "locked",
            "pan",
            "tilt",
            "push",
            "pull",
            "mixed",
            "unknown"
          ]
        },
        "camera_confidence": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "motion_intensity": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "brightness_luma_mean": {
          "type": "number",
          "minimum": 0,
          "maximum": 255
        },
        "palette_hint": {
          "type": "string",
          "pattern": "^#[0-9A-Fa-f]{6}$"
        }
      }
    },
    "visual_facts": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "camera_movement_mode",
        "camera_movement_confidence",
        "brightness_bucket",
        "luma_mean",
        "palette_top_hex"
      ],
      "properties": {
        "camera_movement_mode": {
          "type": "string",
          "enum": [
            "locked",
            "pan",
            "tilt",
            "push",
            "pull",
            "mixed",
            "unknown"
          ]
        },
        "camera_movement_confidence": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "brightness_bucket": {
          "type": "string",
          "enum": [
            "dark",
            "mid",
            "bright",
            "unknown"
          ]
        },
        "luma_mean": {
          "type": [
            "number",
            "null"
          ],
          "minimum": 0,
          "maximum": 255
        },
        "palette_top_hex": {
          "type": "array",
          "minItems": 1,
          "maxItems": 5,
          "items": {
            "type": "string",
            "pattern": "^#[0-9A-Fa-f]{6}$"
          }
        }
      }
    },
    "suggestions": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "vendor_style_tokens": {
          "type": "array",
          "items": {
            "type": "string",
            "maxLength": 80
          }
        },
        "vendor_prompt_lines": {
          "type": "array",
          "items": {
            "type": "string",
            "maxLength": 220
          }
        },
        "vendor_sources": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/vendor_source"
          }
        }
      }
    },
    "vendor_source": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "vendor",
        "relpath"
      ],
      "properties": {
        "vendor": {
          "type": "string",
          "enum": [
            "indiegtm",
            "nanophoto",
            "bigspy"
          ]
        },
        "relpath": {
          "type": "string",
          "pattern": "^repo/analysis/vendor/(indiegtm|nanophoto|bigspy)/[a-zA-Z0-9._/-]+\\.json$"
        }
      }
    },
    "prompt_packages": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "text2video",
        "image2video"
      ],
      "properties": {
        "text2video": {
          "$ref": "#/definitions/prompt_block"
        },
        "image2video": {
          "$ref": "#/definitions/prompt_block"
        }
      }
    },
    "prompt_block": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "prompt",
        "negative"
      ],
      "properties": {
        "prompt": {
          "type": "string",
          "maxLength": 3000
        },
        "negative": {
          "type": "array",
          "items": {
            "type": "string",
            "maxLength": 120
          }
        }
      }
    },
    "continuity_hooks": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "hero_ids": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "type": "string",
            "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
          }
        },
        "style_id": {
          "type": "string",
          "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
        }
      }
    },
    "confidence": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "measured_truth",
        "inferred_semantics"
      ],
      "properties": {
        "measured_truth": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "inferred_semantics": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "notes": {
          "type": "string",
          "maxLength": 240
        }
      }
    }
  }
}
