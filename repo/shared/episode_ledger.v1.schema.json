{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://cat-ai-factory.repo/shared/episode_ledger.v1.schema.json",
    "title": "Cat AI Factory Episode Ledger v1",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "project",
        "schema",
        "version",
        "generated_at",
        "episodes"
    ],
    "properties": {
        "project": {
            "const": "Cat AI Factory"
        },
        "schema": {
            "const": "episode_ledger.v1"
        },
        "version": {
            "type": "string",
            "minLength": 1
        },
        "generated_at": {
            "type": "string",
            "format": "date-time"
        },
        "episodes": {
            "type": "array",
            "minItems": 1,
            "items": {
                "$ref": "#/definitions/episode"
            }
        }
    },
    "definitions": {
        "kebab_id": {
            "type": "string",
            "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
        },
        "language_map": {
            "type": "object",
            "additionalProperties": false,
            "required": [
                "en",
                "zh-Hans"
            ],
            "properties": {
                "en": {
                    "type": "string",
                    "minLength": 1
                },
                "zh-Hans": {
                    "type": "string",
                    "minLength": 1
                }
            }
        },
        "episode": {
            "type": "object",
            "additionalProperties": false,
            "required": [
                "episode_id",
                "created_at",
                "heroes_involved",
                "summary",
                "new_facts"
            ],
            "properties": {
                "episode_id": {
                    "$ref": "#/definitions/kebab_id"
                },
                "created_at": {
                    "type": "string",
                    "format": "date-time"
                },
                "job_id": {
                    "type": "string",
                    "minLength": 1,
                    "pattern": "^[a-z0-9-]+$"
                },
                "heroes_involved": {
                    "type": "array",
                    "minItems": 1,
                    "uniqueItems": true,
                    "items": {
                        "$ref": "#/definitions/kebab_id"
                    }
                },
                "summary": {
                    "$ref": "#/definitions/language_map"
                },
                "new_facts": {
                    "type": "array",
                    "minItems": 1,
                    "items": {
                        "$ref": "#/definitions/language_map"
                    }
                },
                "next_hook": {
                    "$ref": "#/definitions/language_map"
                },
                "tags": {
                    "type": "array",
                    "minItems": 1,
                    "uniqueItems": true,
                    "items": {
                        "$ref": "#/definitions/kebab_id"
                    }
                },
                "continuity_links": {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "gags_used": {
                            "type": "array",
                            "minItems": 1,
                            "uniqueItems": true,
                            "items": {
                                "$ref": "#/definitions/kebab_id"
                            }
                        },
                        "setting_id": {
                            "$ref": "#/definitions/kebab_id"
                        }
                    }
                }
            }
        }
    }
}