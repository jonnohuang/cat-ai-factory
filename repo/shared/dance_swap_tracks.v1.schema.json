{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/jonnohuang/cat-ai-factory/repo/shared/dance_swap_tracks.v1.schema.json",
  "title": "Dance Swap Tracks v1",
  "description": "Deterministic subject tracks + mask references artifact for Dance Swap v1 lane.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "version",
    "source_video_relpath",
    "subjects"
  ],
  "properties": {
    "version": {
      "const": "dance_swap_tracks.v1"
    },
    "source_video_relpath": {
      "type": "string",
      "pattern": "^sandbox/.+"
    },
    "subjects": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/subject"
      }
    }
  },
  "definitions": {
    "subject_id": {
      "type": "string",
      "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
    },
    "subject": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "subject_id",
        "hero_id",
        "frames"
      ],
      "properties": {
        "subject_id": {
          "$ref": "#/definitions/subject_id"
        },
        "hero_id": {
          "$ref": "#/definitions/subject_id"
        },
        "frames": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/frame_ref"
          }
        }
      }
    },
    "frame_ref": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "frame",
        "bbox",
        "mask_relpath"
      ],
      "properties": {
        "frame": {
          "type": "integer",
          "minimum": 0
        },
        "bbox": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "x",
            "y",
            "w",
            "h"
          ],
          "properties": {
            "x": {
              "type": "integer",
              "minimum": 0
            },
            "y": {
              "type": "integer",
              "minimum": 0
            },
            "w": {
              "type": "integer",
              "minimum": 1
            },
            "h": {
              "type": "integer",
              "minimum": 1
            }
          }
        },
        "mask_relpath": {
          "type": "string",
          "pattern": "^sandbox/.+\\.png$"
        }
      }
    }
  }
}
