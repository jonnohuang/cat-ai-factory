{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/jonnohuang/cat-ai-factory/repo/shared/engine_adapter_registry.v1.schema.json",
  "title": "Engine Adapter Registry v1",
  "description": "Planner/control routing metadata for generation and post-processing adapters.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "version",
    "registry_id",
    "baseline",
    "routing",
    "providers"
  ],
  "properties": {
    "version": {
      "const": "engine_adapter_registry.v1"
    },
    "registry_id": {
      "type": "string",
      "minLength": 1
    },
    "generated_at": {
      "type": "string",
      "format": "date-time"
    },
    "baseline": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "video_provider",
        "frame_provider"
      ],
      "properties": {
        "video_provider": {
          "type": "string",
          "minLength": 1
        },
        "frame_provider": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "routing": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "video_provider_order",
        "frame_provider_order",
        "lab_challenger_order",
        "motion_constraints",
        "post_process_order"
      ],
      "properties": {
        "video_provider_order": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "frame_provider_order": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "lab_challenger_order": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "motion_constraints": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "post_process_order": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        }
      }
    },
    "providers": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "provider_id",
          "kind",
          "mode",
          "enabled",
          "lane_support"
        ],
        "properties": {
          "provider_id": {
            "type": "string",
            "minLength": 1
          },
          "kind": {
            "type": "string",
            "enum": [
              "video",
              "frame",
              "motion_constraint",
              "post_process"
            ]
          },
          "mode": {
            "type": "string",
            "enum": [
              "production",
              "lab"
            ]
          },
          "enabled": {
            "type": "boolean"
          },
          "lane_support": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": [
                "ai_video",
                "image_motion",
                "template_remix",
                "dance_swap"
              ]
            }
          },
          "notes": {
            "type": "string",
            "maxLength": 240
          },
          "config": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "model_family": {
                "type": "string",
                "minLength": 1
              },
              "model_version": {
                "type": "string",
                "minLength": 1
              },
              "endpoint_region": {
                "type": "string",
                "minLength": 1
              }
            }
          }
        }
      }
    }
  }
}
