{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/jonnohuang/cat-ai-factory/repo/shared/recast_benchmark_suite.v1.schema.json",
  "title": "Recast Benchmark Suite v1",
  "description": "Deterministic benchmark suite definition for recast quality regression.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "version",
    "suite_id",
    "cases"
  ],
  "properties": {
    "version": {
      "const": "recast_benchmark_suite.v1"
    },
    "suite_id": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$"
    },
    "cases": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "case_id",
          "job_id",
          "video_relpath"
        ],
        "properties": {
          "case_id": {
            "type": "string",
            "pattern": "^[a-z0-9-]+$"
          },
          "job_id": {
            "type": "string",
            "pattern": "^[a-z0-9-]+$"
          },
          "video_relpath": {
            "type": "string",
            "pattern": "^sandbox/.+\\.(mp4|mov|mkv|webm)$"
          },
          "hero_image_relpath": {
            "type": "string"
          },
          "tracks_relpath": {
            "type": "string"
          },
          "subject_id": {
            "type": "string"
          },
          "loop_start_frame": {
            "type": "integer",
            "minimum": 0
          },
          "loop_end_frame": {
            "type": "integer",
            "minimum": 1
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    }
  }
}

