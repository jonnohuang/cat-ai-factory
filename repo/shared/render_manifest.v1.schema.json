{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/jonnohuang/cat-ai-factory/repo/shared/render_manifest.v1.schema.json",
  "title": "Render Manifest v1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "version",
    "job_id",
    "stage",
    "final_mp4",
    "final_srt",
    "result_json",
    "hashes"
  ],
  "properties": {
    "version": {
      "const": "render_manifest.v1"
    },
    "job_id": {
      "type": "string",
      "minLength": 1
    },
    "stage": {
      "const": "render"
    },
    "final_mp4": {
      "type": "string",
      "pattern": ".+\\.mp4$"
    },
    "final_srt": {
      "type": "string",
      "pattern": ".+\\.srt$"
    },
    "result_json": {
      "type": "string",
      "pattern": ".+\\.json$"
    },
    "hashes": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "final_mp4_sha256",
        "final_srt_sha256"
      ],
      "properties": {
        "final_mp4_sha256": {
          "type": "string",
          "pattern": "^[a-f0-9]{64}$"
        },
        "final_srt_sha256": {
          "type": "string",
          "pattern": "^[a-f0-9]{64}$"
        }
      }
    },
    "ffmpeg_cmd": {
      "type": [
        "array",
        "null"
      ],
      "items": {
        "type": "string"
      }
    },
    "ffmpeg_cmd_executed": {
      "type": [
        "array",
        "null"
      ],
      "items": {
        "type": "string"
      }
    }
  }
}

