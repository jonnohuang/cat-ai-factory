{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/jonnohuang/cat-ai-factory/repo/shared/video_analysis_index.v1.schema.json",
  "title": "Video Analysis Index v1",
  "description": "Planner-only index of analysis metadata artifacts for deterministic retrieval.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "version",
    "generated_at",
    "analyses"
  ],
  "properties": {
    "version": {
      "const": "video_analysis_index.v1"
    },
    "generated_at": {
      "type": "string",
      "format": "date-time"
    },
    "analyses": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/analysis_ref"
      }
    }
  },
  "definitions": {
    "kebab_id": {
      "type": "string",
      "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
    },
    "analysis_ref": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "analysis_id",
        "relpath",
        "priority",
        "tags",
        "lane_hints",
        "duration_bucket"
      ],
      "properties": {
        "analysis_id": {
          "$ref": "#/definitions/kebab_id"
        },
        "relpath": {
          "type": "string",
          "pattern": "^repo/canon/demo_analyses/[a-z0-9._-]+\\.json$"
        },
        "priority": {
          "type": "integer",
          "minimum": 0,
          "maximum": 100
        },
        "quality_score": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "tags": {
          "type": "array",
          "minItems": 1,
          "uniqueItems": true,
          "items": {
            "$ref": "#/definitions/kebab_id"
          }
        },
        "lane_hints": {
          "type": "array",
          "minItems": 1,
          "uniqueItems": true,
          "items": {
            "type": "string",
            "enum": [
              "ai_video",
              "image_motion",
              "template_remix",
              "dance_swap",
              "mixed"
            ]
          }
        },
        "duration_bucket": {
          "type": "string",
          "enum": [
            "short_0_15",
            "short_16_30",
            "short_31_60"
          ]
        },
        "summary": {
          "type": "string",
          "maxLength": 280
        }
      }
    }
  }
}
