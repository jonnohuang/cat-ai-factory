{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/jonnohuang/cat-ai-factory/repo/shared/recast_benchmark_report.v1.schema.json",
  "title": "Recast Benchmark Report v1",
  "description": "Aggregate benchmark output for deterministic recast quality regression runs.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "version",
    "suite_id",
    "generated_at",
    "cases",
    "summary"
  ],
  "properties": {
    "version": {
      "const": "recast_benchmark_report.v1"
    },
    "suite_id": {
      "type": "string"
    },
    "generated_at": {
      "type": "string"
    },
    "cases": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "case_id",
          "job_id",
          "report_path",
          "overall_score",
          "overall_pass",
          "failed_metrics"
        ],
        "properties": {
          "case_id": {
            "type": "string"
          },
          "job_id": {
            "type": "string"
          },
          "report_path": {
            "type": "string"
          },
          "overall_score": {
            "type": "number",
            "minimum": 0,
            "maximum": 1
          },
          "overall_pass": {
            "type": "boolean"
          },
          "failed_metrics": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "summary": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "case_count",
        "pass_count",
        "avg_overall_score",
        "all_pass"
      ],
      "properties": {
        "case_count": {
          "type": "integer",
          "minimum": 1
        },
        "pass_count": {
          "type": "integer",
          "minimum": 0
        },
        "avg_overall_score": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "all_pass": {
          "type": "boolean"
        }
      }
    }
  }
}

