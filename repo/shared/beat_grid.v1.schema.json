{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Beat Grid v1",
  "description": "Deterministic timing metadata for audio alignment.",
  "type": "object",
  "required": [
    "version",
    "bpm",
    "beats_per_bar"
  ],
  "properties": {
    "version": {
      "type": "string",
      "const": "beat_grid.v1"
    },
    "bpm": {
      "type": "number",
      "description": "Beats per minute."
    },
    "beats_per_bar": {
      "type": "integer",
      "description": "Number of beats in a single musical bar (e.g., 4)."
    },
    "offset_ms": {
      "type": "integer",
      "default": 0,
      "description": "Millisecond offset for the first beat."
    },
    "events": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "type",
          "time_s"
        ],
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "cut",
              "move",
              "drop",
              "effect"
            ]
          },
          "time_s": {
            "type": "number",
            "description": "Time in seconds relative to track start."
          },
          "beat": {
            "type": "number",
            "description": "Musical beat number (optional calculation aid)."
          },
          "label": {
            "type": "string"
          }
        }
      }
    }
  }
}