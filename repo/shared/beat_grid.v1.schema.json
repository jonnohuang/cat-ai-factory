{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/jonnohuang/cat-ai-factory/repo/shared/beat_grid.v1.schema.json",
  "title": "Beat Grid v1",
  "description": "Deterministic analyzer beat timeline for planner-side quality constraints.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "version",
    "analysis_id",
    "source_video_relpath",
    "bpm_estimate",
    "beats"
  ],
  "properties": {
    "version": {
      "const": "beat_grid.v1"
    },
    "analysis_id": {
      "type": "string",
      "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
    },
    "source_video_relpath": {
      "type": "string",
      "pattern": "^sandbox/.+\\.(mp4|mov|mkv|webm)$"
    },
    "bpm_estimate": {
      "type": "number",
      "minimum": 1
    },
    "beats": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/beat"
      }
    }
  },
  "definitions": {
    "beat": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "t_sec"
      ],
      "properties": {
        "t_sec": {
          "type": "number",
          "minimum": 0
        },
        "strength": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        }
      }
    }
  }
}
