{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/jonnohuang/cat-ai-factory/repo/shared/storyboard.v1.schema.json",
  "title": "Storyboard v1",
  "description": "Optional Mode B planner-side storyboard keyframe contract.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "version",
    "job_id",
    "frames"
  ],
  "properties": {
    "version": {
      "const": "storyboard.v1"
    },
    "job_id": {
      "type": "string",
      "minLength": 1
    },
    "frames": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "shot_id",
          "anchor_id",
          "image_asset",
          "prompt",
          "duration_sec"
        ],
        "properties": {
          "shot_id": {
            "type": "string",
            "pattern": "^shot_[0-9]{3}$"
          },
          "anchor_id": {
            "type": "string",
            "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
          },
          "image_asset": {
            "type": "string",
            "pattern": "^(assets|sandbox/assets)/.+\\.(png|jpg|jpeg|webp)$"
          },
          "prompt": {
            "type": "string",
            "minLength": 1
          },
          "duration_sec": {
            "type": "number",
            "exclusiveMinimum": 0
          }
        }
      }
    }
  }
}

