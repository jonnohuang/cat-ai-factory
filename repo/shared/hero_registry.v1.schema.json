{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://cat-ai-factory.repo/shared/hero_registry.v1.schema.json",
    "title": "Cat AI Factory Hero Registry v1",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "project",
        "schema",
        "version",
        "generated_at",
        "heroes"
    ],
    "properties": {
        "project": {
            "const": "Cat AI Factory"
        },
        "schema": {
            "const": "hero_registry.v1"
        },
        "version": {
            "type": "string",
            "minLength": 1
        },
        "generated_at": {
            "type": "string",
            "format": "date-time"
        },
        "heroes": {
            "type": "array",
            "minItems": 1,
            "items": {
                "$ref": "#/definitions/hero"
            }
        }
    },
    "definitions": {
        "kebab_id": {
            "type": "string",
            "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
        },
        "hero": {
            "type": "object",
            "additionalProperties": false,
            "required": [
                "hero_id",
                "name",
                "role",
                "series_tags",
                "traits",
                "personality_traits",
                "costume"
            ],
            "properties": {
                "hero_id": {
                    "$ref": "#/definitions/kebab_id"
                },
                "name": {
                    "type": "object",
                    "additionalProperties": false,
                    "required": [
                        "en",
                        "zh-Hans"
                    ],
                    "properties": {
                        "en": {
                            "type": "string",
                            "minLength": 1
                        },
                        "zh-Hans": {
                            "type": "string",
                            "minLength": 1
                        }
                    }
                },
                "role": {
                    "$ref": "#/definitions/kebab_id"
                },
                "series_tags": {
                    "type": "array",
                    "minItems": 1,
                    "items": {
                        "$ref": "#/definitions/kebab_id"
                    }
                },
                "traits": {
                    "type": "object",
                    "additionalProperties": false,
                    "required": [
                        "coat_type",
                        "primary_color",
                        "secondary_color",
                        "pattern",
                        "eye_color",
                        "distinguishing_marks"
                    ],
                    "properties": {
                        "coat_type": {
                            "type": "string",
                            "minLength": 1
                        },
                        "primary_color": {
                            "type": "string",
                            "minLength": 1
                        },
                        "secondary_color": {
                            "anyOf": [
                                {
                                    "type": "string",
                                    "minLength": 1
                                },
                                {
                                    "type": "null"
                                }
                            ]
                        },
                        "pattern": {
                            "anyOf": [
                                {
                                    "type": "string",
                                    "minLength": 1
                                },
                                {
                                    "type": "null"
                                }
                            ]
                        },
                        "eye_color": {
                            "anyOf": [
                                {
                                    "type": "string",
                                    "minLength": 1
                                },
                                {
                                    "type": "null"
                                }
                            ]
                        },
                        "distinguishing_marks": {
                            "anyOf": [
                                {
                                    "type": "string",
                                    "minLength": 1
                                },
                                {
                                    "type": "null"
                                }
                            ]
                        }
                    }
                },
                "personality_traits": {
                    "type": "array",
                    "minItems": 1,
                    "items": {
                        "type": "string",
                        "minLength": 1
                    }
                },
                "costume": {
                    "type": "object",
                    "additionalProperties": false,
                    "required": [
                        "id",
                        "notes"
                    ],
                    "properties": {
                        "id": {
                            "type": "string",
                            "minLength": 1
                        },
                        "notes": {
                            "type": "string",
                            "minLength": 1
                        }
                    }
                },
                "identity_pack": {
                    "type": "object",
                    "additionalProperties": false,
                    "required": [
                        "pack_id",
                        "ref"
                    ],
                    "properties": {
                        "pack_id": {
                            "$ref": "#/definitions/kebab_id"
                        },
                        "ref": {
                            "type": "string",
                            "description": "Path to the identity pack JSON (sandbox/assets/identity/<hero_id>/identity.v1.json)"
                        }
                    }
                },
                "asset_hints": {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "seed_frames": {
                            "type": "array",
                            "minItems": 1,
                            "items": {
                                "type": "string",
                                "minLength": 1
                            }
                        },
                        "style_notes": {
                            "type": "string",
                            "minLength": 1
                        }
                    }
                }
            }
        }
    }
}