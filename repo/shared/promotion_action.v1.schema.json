{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/jonnohuang/cat-ai-factory/repo/shared/promotion_action.v1.schema.json",
  "title": "Promotion Action v1",
  "description": "Inbox action contract to approve/reject a promotion candidate deterministically.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "version",
    "action_id",
    "candidate_relpath",
    "decision",
    "submitted_at"
  ],
  "properties": {
    "version": {"const": "promotion_action.v1"},
    "action_id": {"type": "string", "minLength": 1},
    "candidate_relpath": {"type": "string", "pattern": "^sandbox/logs/.+\\.json$"},
    "decision": {"type": "string", "enum": ["approve", "reject"]},
    "reason": {"type": "string", "maxLength": 240},
    "submitted_at": {"type": "string", "format": "date-time"}
  }
}
