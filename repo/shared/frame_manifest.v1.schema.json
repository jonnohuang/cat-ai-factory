{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/jonnohuang/cat-ai-factory/repo/shared/frame_manifest.v1.schema.json",
  "title": "Frame Manifest v1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "version",
    "job_id",
    "stage",
    "source_video",
    "fps",
    "sample_times_sec",
    "frames",
    "frame_count",
    "hashes"
  ],
  "properties": {
    "version": {
      "const": "frame_manifest.v1"
    },
    "job_id": {
      "type": "string",
      "minLength": 1
    },
    "stage": {
      "const": "frame"
    },
    "source_video": {
      "type": "string",
      "minLength": 1
    },
    "fps": {
      "type": "number",
      "exclusiveMinimum": 0
    },
    "sample_times_sec": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "number",
        "minimum": 0
      }
    },
    "frames": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "pattern": ".+\\.png$"
      }
    },
    "frame_count": {
      "type": "integer",
      "minimum": 1
    },
    "hashes": {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": {
        "type": "string",
        "pattern": "^[a-f0-9]{64}$"
      }
    }
  }
}

